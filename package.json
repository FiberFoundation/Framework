{
  "name": "fiber-framework",
  "version": "0.0.1",
  "description": "Fiber brings simplicity and scalability to your JS Apps.",
  "main": "dist/fiber.js",
  "scripts": {
    "build": "webpack --mode=build",
    "dev": "webpack --progress --colors --watch --mode=dev",
    "serve": "webpack-dev-server --mode=test --inline --hot --content-base ./tests/manual",
    "start": "npm run serve",
    "stop": "npm run clean",
    "build:test": "webpack --progress --colors --mode=test",
    "test": "./node_modules/.bin/mocha --recursive --compilers js:babel-core/register ./tests/src",
    "test:watch": "npm run test -- -w",
    "clean": "rm -rf ./dist",
    "min": "uglifyjs ./dist/fiber.js --mangle --source-map ./dist/fiber.min.map -o ./dist/fiber.min.js",
    "doc": "rm -rf ./docs/doc && mr-doc -s ./src -o ./docs/doc -n 'Fiber' -t 'cayman'",
    "postinstall": "npm run build && npm run min && npm run doc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FiberFoundation/Framework.git"
  },
  "keywords": [
    "js",
    "framework",
    "virtual dom",
    "events",
    "model",
    "view",
    "collection",
    "router",
    "contracts",
    "ioc",
    "inversion of control",
    "di container",
    "client",
    "ui"
  ],
  "author": "Igor Krimerman <i.m.krimerman@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FiberFoundation/Framework/issues"
  },
  "homepage": "https://github.com/FiberFoundation/Framework#readme",
  "dependencies": {
    "lodash": "^4.12.0",
    "ractive": "^0.7.3",
    "superagent": "^1.8.3"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.5.0",
    "gulp": "^3.9.1",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.3",
    "jscs": "^3.0.4",
    "jscs-loader": "^0.3.0",
    "mocha": "^2.5.3",
    "mr-doc": "^3.2.1",
    "mr-doc-theme-cayman": "^1.4.1",
    "shelljs": "^0.7.0",
    "sinon": "^1.17.4",
    "uglify-js": "^2.6.2",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "yargs": "^4.7.1"
  }
}
